{
  "id": null,
  "title": "Spring Boot Resource Sizing Overview",
  "tags": ["spring-boot", "kubernetes", "performance"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 5,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Active Requests (Count)",
      "targets": [
        {
          "expr": "http_server_requests_active_seconds_count{job=\"resource-sizing-service\"}",
          "legendFormat": "Active - {{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Max Response Time (s)",
      "targets": [
        {
          "expr": "http_server_requests_seconds_max{job=\"resource-sizing-service\"}",
          "legendFormat": "Max - {{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "JVM CPU Usage (%)",
      "targets": [
        {
          "expr": "process_cpu_usage{job=\"resource-sizing-service\"} * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "JVM Memory Usage (MiB)",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=\"resource-sizing-service\"} / 1024 / 1024",
          "legendFormat": "{{area}} - {{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Usage (MiB)",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\", job=\"resource-sizing-service\"} / 1024 / 1024",
          "legendFormat": "Heap"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "type": "timeseries",
      "title": "GC Pause Time (s)",
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=\"resource-sizing-service\"}[1m])",
          "legendFormat": "GC Pause"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    },
    {
      "type": "timeseries",
      "title": "Response Time Metrics (s)",
      "targets": [
        {
          "expr": "http_server_requests_seconds_max{job=\"resource-sizing-service\"}",
          "legendFormat": "Max - {{instance}}"
        },
        {
          "expr": "rate(http_server_requests_seconds_sum{job=\"resource-sizing-service\"}[1m]) / rate(http_server_requests_seconds_count{job=\"resource-sizing-service\"}[1m])",
          "legendFormat": "Avg - {{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
    },
    {
      "type": "timeseries",
      "title": "Request Rate (req/sec)",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"resource-sizing-service\"}[1m])",
          "legendFormat": "RPS - {{instance}}"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"resource-sizing-service\"}[1m]))",
          "legendFormat": "Total RPS"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
    },
    {
      "type": "timeseries",
      "title": "Request Duration by Endpoint (s)",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_sum{job=\"resource-sizing-service\"}[1m]) / rate(http_server_requests_seconds_count{job=\"resource-sizing-service\"}[1m])",
          "legendFormat": "{{uri}} {{method}} - {{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
    }
  ]
}
