{
  "id": null,
  "title": "Spring Boot Resource Sizing Overview",
  "tags": ["spring-boot", "kubernetes", "performance"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 5,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Active Requests (Count)",
      "targets": [
        {
          "expr": "sum(http_server_requests_active_seconds_count{job=\"resource-sizing-service\"})",
          "legendFormat": "Active Requests"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Max Response Time (s)",
      "targets": [
        {
          "expr": "max(http_server_requests_seconds_max{job=\"resource-sizing-service\"})",
          "legendFormat": "Max Response Time"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "CPU Usage per Pod (millicores)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"load-testing\",container=\"resource-sizing-service\"}[1m])) by (pod) * 1000",
          "legendFormat": "{{pod}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "Memory Usage per Pod (MiB)",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{namespace=\"load-testing\",container=\"resource-sizing-service\"} / 1024 / 1024",
          "legendFormat": "{{pod}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Usage (MiB)",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\", job=\"resource-sizing-service\"} / 1024 / 1024",
          "legendFormat": "Heap"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "type": "timeseries",
      "title": "GC Pause Time (s)",
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=\"resource-sizing-service\"}[1m])",
          "legendFormat": "GC Pause"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    }
  ]
}
